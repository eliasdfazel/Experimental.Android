<resources>
	<declare-styleable name="RealtimeBlurView">
		<attr name="realtimeBlurRadius" format="dimension"/>
		<attr name="realtimeDownSampleFactor" format="float"/>

		<attr name="realtimeFirstColor" format="color"/>
		<attr name="realtimeSecondColor" format="color"/>

		<attr name="realtimeStrokeWidth" format="integer"/>
		<attr name="realtimeStrokeColor" format="color"/>

		<attr name="realtimeBlurTopLeft" format="dimension"/>
		<attr name="realtimeBlurTopRight" format="dimension"/>
		<attr name="realtimeBlurBottomLeft" format="dimension"/>
		<attr name="realtimeBlurBottomRight" format="dimension"/>

		<attr name="realtimeBlurGradientType" format="enum">
			<enum name="none" value="0"/>
			<enum name="radial" value="1"/>
			<enum name="linearTopBottom" value="2"/>
			<enum name="linearLeftRight" value="3"/>
			<enum name="linearTilt" value="4"/>
		</attr>
	</declare-styleable>
</resources>